<h1><%= @user.username %></h1>

<h5><a href="/goals/new">Create New Goal</a></h5>
<br>

<h3>Current Goals</h3>
<% @user.goals.each do |goal| %>
    <li><%= goal.title %></li>
<% end %>
<br>
<%# delete form %>
<form action="/users/<%= @user.id %>" method="post">
    <input type="hidden" name="_method" id="hidden" value="delete">
    <input type="submit" value="delete user">
</form>